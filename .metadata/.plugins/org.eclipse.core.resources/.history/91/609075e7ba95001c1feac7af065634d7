import java.util.ArrayList;
import java.util.Arrays;

public class Word {
	ArrayList<StringBuilder> myNeighbours = new ArrayList<StringBuilder>(Arrays.asList(""));
	private int dim = 0;
		
	public void setNeighbourhood(int index, StringBuilder[] words, boolean[][] matrix, int n)
	{
		for(int i = 0; i < n; i++)
			if(matrix[index][i] == true)
			{
				myNeighbours.add(words[i]);
				dim++;
			}
				
	}
	public void printNeighbours(int index)
	{
		System.out.print("Vecinii lui " + myNeighbours.get(index) + " sunt: ");
		for(int i = 0; i < dim; i++)
			System.out.print(myNeighbours.get(i) + " ");
	}
}
