import java.util.Vector;

public class Asistent extends Om {
	  private Vector<Pacient> pacienti;

	  public Asistent(String nume,String CNP,String specializare) {
	    super(nume,CNP);
	    pacienti = new Vector<Pacient>();
	  }

	  public void addPacient(Pacient pacient){
	    pacienti.add(pacient);
	  }

	  public void removePacient(Pacient pacient){
	    for(Pacient p : pacienti){
	      if(p.CNP.equals(pacient.CNP)){
	        pacienti.remove(p);
	        return;
	      }
	    }
	  }

	  public void showDescriere(){
	    System.out.format("Asistentul %s (%s) - (",this.nume);
	    for (Pacient p : pacienti){
	      p.showDescriere();
	    }
	    System.out.print("\b\b)");
	    System.out.println();
	  }
	
}
